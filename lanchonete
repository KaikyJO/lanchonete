algoritmo "Lanchonete"
var
   quantidade:inteiro
   codigo:inteiro
   preco:real
inicio
   escreval("cardapio:")
   escreval("Cachorro Quente - 10 Reais - Código do item: 100")
   escreval("Bauru - 12 Reais - Código do item: 101")
   escreval("X-Salada - 15 Reais - Código do item: 102")
   escreval("Hamburguer - 18 Reais - Código do item: 103")
   escreval("Refrigerante (Lata) - 5 Reais - Código do item: 104")
   escreval("")
   escreval("Digite o Código do item que deseja pedir: ")
   leia(codigo)
   escreval("Digite a quantidade: ")
   leia(quantidade)
   
   
   escolha codigo
     caso 100
      preco<- quantidade*10.00
     caso 101
      preco<- quantidade*12.00
     caso 102
      preco<- quantidade*15.00
     caso 103
      preco<- quantidade*18.00
     caso 104
      preco<- quantidade*5.00
     outrocaso
      escreva("Código de item inválido!")
   fimescolha
   
   se (codigo>=100) e (codigo<=104) entao
     escreva("O preço do pedido é: ", preco:5:2, " Reais")
   fimse
      
fimalgoritmo
